{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./src/",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "Node",
        "lib": ["ES2020", "DOM"],
        "types": [],                 // important
        "skipLibCheck": true,        // safe for libs
        "declaration": true,
        "strict": true
    }
}
